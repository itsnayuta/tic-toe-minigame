<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="30dp"
    android:layout_gravity="center">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW GAME"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_dialog"
        android:fontFamily="@font/fontgame"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="26dp" />

    <!-- Game Mode Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME MODE:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_dialog"
        android:fontFamily="@font/fontgame"
        android:layout_marginBottom="14dp" />

    <!-- Game Mode Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="22dp">

        <Button
            android:id="@+id/btnPvBot"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="1P"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/fontgame"
            android:background="@drawable/button_unselected"
            android:layout_marginEnd="6dp" />

        <Button
            android:id="@+id/btnPvP"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="2P"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/fontgame"
            android:background="@drawable/button_unselected"
            android:layout_marginStart="6dp" />

    </LinearLayout>

    <!-- Bot Difficulty Section -->
    <LinearLayout
        android:id="@+id/difficultySection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOT DIFFICULTY:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_dialog"
            android:fontFamily="@font/fontgame"
            android:layout_marginBottom="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="22dp">

            <Button
                android:id="@+id/btnEasy"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Easy"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/fontgame"
                android:background="@drawable/button_unselected"
                android:layout_marginEnd="3dp" />

            <Button
                android:id="@+id/btnNormal"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Normal"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/fontgame"
                android:background="@drawable/button_unselected"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp" />

            <Button
                android:id="@+id/btnHard"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Hard"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/fontgame"
                android:background="@drawable/button_unselected"
                android:layout_marginStart="3dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Board Size Buttons -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/fontgame"
        android:text="BOARD SIZE:"
        android:textColor="@color/text_dialog"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="26dp">

        <Button
            android:id="@+id/btn3x3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="3×3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/fontgame"
            android:background="@drawable/button_unselected"
            android:layout_marginEnd="3dp" />

        <Button
            android:id="@+id/btn5x5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="5×5"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/fontgame"
            android:background="@drawable/button_unselected"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp" />

        <Button
            android:id="@+id/btn7x7"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="7×7"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/fontgame"
            android:background="@drawable/button_unselected"
            android:layout_marginStart="3dp" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="BACK"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/fontgame"
            android:background="@drawable/button_secondary"
            android:layout_marginEnd="6dp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="START"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/fontgame"
            android:background="@drawable/button_primary"
            android:layout_marginStart="6dp" />

    </LinearLayout>

</LinearLayout>