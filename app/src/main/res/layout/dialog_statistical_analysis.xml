<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="24dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STATISTICAL ANALYSIS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/fontgame"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxHeight="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#40FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EASY MODE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/fontgame"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="fill_horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wins:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvEasyWins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="fill_horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Losses:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvEasyLosses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="fill_horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Win Rate:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvEasyWinRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

            </LinearLayout>

            <!-- Medium Mode Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#40FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MEDIUM MODE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:fontFamily="@font/fontgame"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wins:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvMediumWins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Losses:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvMediumLosses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Win Rate:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvMediumWinRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#40FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HARD MODE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#F44336"
                    android:fontFamily="@font/fontgame"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wins:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvHardWins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Losses:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvHardLosses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Win Rate:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvHardWinRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#60FFFFFF"
                android:padding="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OVERALL STATISTICS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:fontFamily="@font/fontgame"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Games:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvTotalGames"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Wins:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvTotalWins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Losses:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvTotalLosses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Overall Win Rate:"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvOverallWinRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107"
                        android:fontFamily="@font/fontgame" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnDeleteData"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="DELETE"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/fontgame"
            android:background="@drawable/button_mm"
            android:backgroundTint="#F44336"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="BACK"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/fontgame"
            android:background="@drawable/button_mm"
            android:elevation="4dp" />

    </LinearLayout>

</LinearLayout>
