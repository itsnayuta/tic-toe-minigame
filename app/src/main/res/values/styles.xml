<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <!-- Custom SeekBar style that ignores system theme -->
    <style name="CustomSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:progressTint">#FF4081</item>
        <item name="android:thumbTint">#FF4081</item>
        <item name="android:progressBackgroundTint">#E0E0E0</item>
    </style>
    
    <!-- Custom ToggleButton style -->
    <style name="CustomToggleButton" parent="@android:style/Widget.Button.Toggle">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <!-- Custom Button style -->
    <style name="CustomButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Custom Dialog Theme with Light Background and Dark Text -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:textColorPrimary">@color/text_dialog</item>
        <item name="android:textColorSecondary">@color/text_dialog</item>
        <item name="colorPrimary">@color/button_primary</item>
        <item name="colorAccent">@color/button_primary</item>
        <item name="android:buttonBarButtonStyle">@style/CustomDialogButton</item>
        <item name="android:fontFamily">@font/fontgame</item>
    </style>
    
    <!-- Custom Dialog Button Style -->
    <style name="CustomDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/button_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/fontgame</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>